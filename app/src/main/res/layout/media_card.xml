<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/media_card__media_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:alpha="0.5"
        tools:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/media_card__media_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="afgalfgaodfkgjaifdgoanfdgoafdafgalfgaodfkgjaifdgoanfdgoafdafgalfgaodfkgjaifdgoanfdgoafdafgalfgaodfkgjaifdgoanfdgoafdafgalfgaodfkgjaifdgoanfdgoafd"
        app:layout_constraintBottom_toBottomOf="@id/media_card__media_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.slider.Slider
        android:id="@+id/media_card__media_rate_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_card__media_image"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/media_card__media_rate_slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        tools:text="afgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgakafgalfkakfgak"
        />

</androidx.constraintlayout.widget.ConstraintLayout>