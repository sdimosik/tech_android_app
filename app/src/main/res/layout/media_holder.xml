<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/media_holder__media_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/purple_200"
        />

    <TextView
        android:id="@+id/media_holder__media_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/media_holder__media_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/media_holder__media_image"
        app:layout_constraintTop_toTopOf="@+id/media_holder__media_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="dgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofg"
        />

    <TextView
        android:id="@+id/media_holder__media_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/media_holder__media_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/media_holder__media_image"
        app:layout_constraintTop_toBottomOf="@+id/media_holder__media_name"
        tools:text="dgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofgdgadfgajdfogjodfgaofgaofg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>